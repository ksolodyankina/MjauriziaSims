<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="/js/jquery-2.2.0.min.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <title>@ViewBag.Title</title>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top ">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sims Randomizer</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Aspiration
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Randomizer/Goal">Aspiration</a></li>
                            <li><a class="dropdown-item" href="/Randomizer/ChildGoal">Children Aspiration</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Randomizer/Career">Career</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Preferences
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Randomizer/PreferenceColor/">Color</a></li>
                            <li><a class="dropdown-item" href="/Randomizer/PreferenceMusic/">Music</a></li>
                            <li><a class="dropdown-item" href="/Randomizer/PreferenceHobby/">Hobby</a></li>
                            <li><a class="dropdown-item" href="/Randomizer/PreferenceDesign/">Design</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Family/Index">Families</a>
                    </li>
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {

                <a href="/Account/Logout" class="nav-link text-light">
                    <i class="bi-box-arrow-right"></i>
                    Log out
                </a>
            }
            else
            {
                <a href="/" class="nav-link text-light" data-bs-toggle="modal" data-bs-target="#loginModal">
                    <i class="bi-door-open"></i>
                    Log in
                </a>
            }
        </div>
    </nav>

<div class="row mt-5">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-10 bg-light mt-2" style="min-height: 92vh;">
            @RenderBody()
        </div>
        <div class="col-sm-1">
        </div>
    </div>
    
<!-- Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Log in</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="closeBtn"></button>
                </div>
                @using (Html.BeginForm("Login", "Account", new { }, (FormMethod)1, false, new { id = "loginForm" }))
                {
                    <div class="modal-body">
                        <div id="errMsg" class="form-text hidden text-danger"></div>
                        <div class="p-1">Login :</div>
                        @Html.TextBox("Login", null, new { @class = "form-control", @id = "login" })
                        <div id="loginHelp" class="form-text hidden text-danger">Please, fill login field</div>

                        <div class="p-1">Password :</div>
                        @Html.Password("Password", null, new { @class = "form-control", @id = "password" })
                        <div id="passwordEmptyHelp" class="form-text"><a href="/Account/Recovery" class="text-black">Forgot password?</a></div>
                        <div id="passwordHelp" class="form-text hidden text-danger">Please, fill password field</div>
                        <div id="passwordIncorrectHelp" class="form-text hidden text-danger">Password or Login is incorrect</div>

                        <div class="row justify-content-md-center">
                            <div class="col-sm-11 center-block text-center p-1">Or</div>
                            <div class="col-sm-11 center-block text-center selected-option-box">
                                <div id="g_id_onload"
                                     data-client_id="589496246267-3c6k5j1flaev2mrruei0ftq7bkihrno5.apps.googleusercontent.com"
                                     data-login_uri="https://localhost:7029/"
                                     data-auto_prompt="false">
                                </div>
                                <div class="g_id_signin"
                                     data-type="standard"
                                     data-size="large"
                                     data-theme="outline"
                                     data-text="sign_in_with"
                                     data-shape="rectangular"
                                     data-logo_alignment="left">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <a href="/account/registration"><button type="button" class="btn btn-secondary">Registration</button></a>
                        <input type="submit" value="Log in" class="btn btn-primary" id="loginBtn"/>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>