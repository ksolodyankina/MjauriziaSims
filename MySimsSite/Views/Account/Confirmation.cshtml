@model bool

@{
    ViewBag.Title = "Email Confirmation Info";
}

<div class="m-3">
    @if (Model)
    {
        <div class="text-success">Email is successfully confirmed.</div>
    }
    else
    {
        <div class="text-danger">Your link is wrong. Please, try to register again.</div>
    }
</div>
