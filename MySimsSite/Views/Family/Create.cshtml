@using Domain.Entities
@using WebUI.Models;
@model FamilyViewModel

@{
    ViewBag.Title = "New family creation";
}

<div class="m-3">
    <h3>New family creation</h3>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Family.FamilyId)
        @Html.HiddenFor(m => m.Family.Generation)

        <div class="row">
            <div class="col-sm-12">
                <div class="p-1">Surname :</div>
                @Html.TextBox("Family.Surname", null, new { @class = "form-control" })
            </div>
                
            <div class="col-sm-6">
                <div class="p-1">Gender Law :</div>
                <select asp-for="Family.Inheritance1" asp-items="@Model.GetInheritanceSelectCategory(0)" class="form-select"></select>
            </div>    
            <div class="col-sm-6">
                <div class="p-1">Bloodline Law :</div>
                <select asp-for="Family.Inheritance2" asp-items="@Model.GetInheritanceSelectCategory(1)" class="form-select"></select>
            </div>    
            <div class="col-sm-6">
                <div class="p-1">Heir Law :</div>
                <select asp-for="Family.Inheritance3" asp-items="@Model.GetInheritanceSelectCategory(2)" class="form-select"></select>
            </div>    
            <div class="col-sm-6">
                <div class="p-1">Species Law :</div>
                <select asp-for="Family.Inheritance4" asp-items="@Model.GetInheritanceSelectCategory(3)" class="form-select"></select>
            </div>
        </div>

        <div class="row justify-content-md-center mt-3">
            <div class="col col-auto">
                <input type="submit" value="Save" class="btn btn-light" />
            </div>
        </div>
    }
</div>
