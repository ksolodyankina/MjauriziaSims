@using Domain.Entities
@model User

@{
    ViewBag.Title = "Admin : Edit User";
    ViewBag.TabId = "admin-users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Edit user @Model.Username</h3>
    </div>

    @using (Html.BeginForm())
    {
        <div class="row">
            @Html.HiddenFor(m => m.UserId)

            <div class="col-sm-6">
                <label>Username :</label>
                @Html.TextBox("Username", null, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                <label>Email :</label>
                @Html.TextBox("Email", null, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                <label>Password :</label>
                @Html.Password("Password", null, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                <label>Confirm Password :</label>
                @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                <label>IsActive :</label>
                @Html.CheckBox("IsActive", null, new { @class = "form-check-label" })
            </div>
            <div>
                <label>Role :</label>
                @Html.DropDownList("Role", Model.GetSelectRoles())
            </div>
        </div>

        <div class="mt-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="/Admin/DeleteUser/@Model.UserId" class="btn btn-danger">Delete</a>
        </div>
    }
</div>
